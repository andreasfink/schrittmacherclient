CC=@CC@
CFLAGS=@CFLAGS@ -Ischrittmacherclient/
CONFIGURATION=Release
LDFLAGS=@LDFLAGS@

LIB=libschrittmacherclient.so
PKGCONFIGFILE=schrittmacherclient.pc

MFILES = $(wildcard schrittmacherclient/*.m)
HFILES = version.h $(wildcard schrittmacherclient/*.h)
MOFILES  = $(MFILES:.m=.m.o)
OFILES = $(MOFILES)

INCLUDEDIRS = -I schrittmacherclient

DEBUG_RELEASE = -DCONFIGURATION_SCHRITTMACHERCLIENT_${CONFIGURATION}=1

${LIB}: ${OFILES}
	./make_version
	${CC} -shared -o ${LIB}  ${LDFLAGS} ${OFILES} ${LIBS} ${STATIC_LIBS}

install: ${LIB}
	-mkdir -p ${DESTDIR}/usr/local/include/schrittmacherclient
	-mkdir -p ${DESTDIR}/usr/local/lib/pkgconfig
	-install -b -g root -o root -m 644 ${LIB} ${DESTDIR}/usr/local/lib/
	-install -b -g root -o root -m 644 ${PKGCONFIGFILE} ${DESTDIR}/usr/local/lib/pkgconfig/
	-mkdir -p ${DESTDIR}/usr/local/include/schrittmacherclient
	cp $(HFILES) ${DESTDIR}/usr/local/include/schrittmacherclient

clean:
	rm -f $(LIB) $(OFILES)

.SUFFIXES: .m.o .o .m .c

%.m.o:	%.m
	${CC} -c ${CFLAGS} ${DEBUG_RELEASE} -x objective-c -fobjc-arc $<  ${DEBUG_RELEASE} ${INCLUDEDIRS} -o $@



